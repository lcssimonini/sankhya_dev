<?xml version="1.0" encoding="UTF-8" ?>
<persistence 
	xmlns="http://java.sun.com/xml/ns/persistence" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" 
	version="2.0">
  
  <persistence-unit name="crmPersistenceUnit" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    
    <class>br.com.simonini.Cliente</class>
    <class>br.com.simonini.Contato</class>
    <properties>
     	<property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver"/>
     	<property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:file:C:\lucas-java\crm;hsqldb.lock_file=false"/>
     	<property name="javax.persistence.jdbc.user" value="sa"/>
     	<property name="javax.persistence.jdbc.password" value=""/>
     	<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>
     	<property name="hibernate.hbm2ddl.auto" value="update"/>
     	<property name="hibernate.show_sql" value="true" />
		<property name="hibernate.format_sql" value="true" />
    </properties>
  </persistence-unit>
</persistence>

